<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  
  <link rel="stylesheet" href="/css/styles.css">

</head>

<body id="PriceOfferingPage">
  
  <nav id="navbar" class="navbar navbar-expand-lg navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="#" >CineFlix</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a id="nav_l1" class="nav-link" href="http://localhost:5555/movies/">Home</a>
        </li>

      <div class="dropdown" >
        <img src="/images/userlogo.png" alt="" id="logo">
        <div id="logout" class="dropdown-content">
          <span id="s1" class="drop_btn">Update</span>
          <span id="s2" class="drop_btn">Delete</span>
          <span id="s3" class="drop_btn">Logout</span>
        </div>
      </div>
      <div></div>

    </div>
  </nav>


  <div class="container">
    <h1 class="Page3Title">Choose Your Subscription</h1>
  </div>

  <div class="container">
    <div style="border: 2px solid yellow; background-color: blueviolet;">
      <h3 class="offeringTitle">Basic</h3>
      <h1 id="price1" class="pricing">$7.99/Monthly</h1>
      <h5 class="ofrglist">- Standard Definition (SD)</h5>
      <h5 class="ofrglist">- Includes ads</h5>
      <h5 class="ofrglist">- No offline downloads</h5>
      <h5 class="ofrglist">- 1 screen at a time</h5>
    </div>
    <div style="border: 2px solid yellow; color: black;">
      <h3 class="offeringTitle" style="color: black !important;">Premium</h3>
      <h1 id="price2" class="pricing" style="color: black !important;">$12.99/Monthly</h1>
      <h5 class="ofrglist">- Ultra High Definition (UHD/4K)</h5>
      <h5 class="ofrglist">- Ad-free experience</h5>
      <h5 class="ofrglist">- Unlimited offline downloads</h5>
      <h5 class="ofrglist">- 6 screens simultaneously</h5>
      <h5 class="ofrglist">- Premium customer support with 24/7 assistance</h5>
      <h5 class="ofrglist">- Early access to new releases</h5>
    </div>  
    <div style="border: 2px solid yellow; background-color: blueviolet;">
      <h3 class="offeringTitle">Family</h3>
      <h1 id="price3" class="pricing">$16.99/Monthly</h1>
      <h5 class="ofrglist">- High Definition (HD)</h5>
      <h5 class="ofrglist">- Limited ads</h5>
      <h5 class="ofrglist">- Offline downloads for up to 5 devices</h5>
      <h5 class="ofrglist">- 4 screens simultaneously</h5>
      <h5 class="ofrglist">- Access to a larger library of movies, TV series, and games</h5>
    </div>
  </div>

  <div class="container">
    <button class="monthlyORyearly" id="monthly">Monthly</button>
    <button class="monthlyORyearly" id="yearly">Yearly</button>    
  </div>

   
  <script >
    const monthly=document.getElementById('monthly');
    const yearly=document.getElementById('yearly');

    const basic=document.getElementById('price1'),premium=document.getElementById('price2'),family=document.getElementById('price3');

    monthly.addEventListener('click',function(){
      monthly.style.color='black';
      monthly.style.backgroundColor='rgba(207, 207, 25, 0.731)';

      yearly.style.color='white';
      yearly.style.backgroundColor='blueviolet';
      
      basic.innerHTML='$7.99/Monthly';
      premium.innerHTML='$12.99/Monthly';
      family.innerHTML='$16.99/Monthly';
    });

    yearly.addEventListener('click',function(){
      monthly.style.color='white';
      monthly.style.backgroundColor='blueviolet';

      yearly.style.color='black';
      yearly.style.backgroundColor='rgba(207, 207, 25, 0.731)';

      basic.innerHTML='$95.88/Yearly';
      premium.innerHTML='$155.88/Yearly';
      family.innerHTML='$203.88/Yearly';
    });
  </script>

</body>
</html>